{% extends 'ECommerceECommerceBundle::layoutBackEnd.html.twig' %}

{% block body %}
    <h1>Categorie list</h1>

    <table class=" table table-striped table-hoverrecords_list">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Slug</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_categorie_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.slug }}</td>
                <td>{{ entity.description }}</td>
                <td>
                    <a href="{{ path('admin_categorie_show', { 'id': entity.id }) }}"><i class="icon-book"></i> </a>
                    <a href="{{ path('admin_categorie_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i></a>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_categorie_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
